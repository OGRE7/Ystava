

<h1><%= @utilisateur.name %> </h1>

<p>
    
  <% if !@utilisateur.email.empty? %>

      Email:
      <a href="mailto:<%= @utilisateur.email %>">
        <%= @utilisateur.email %>
      </a> - 

  <% end %>
  <%= link_to "Modifier #{@utilisateur.name}",  edit_utilisateur_path(@utilisateur) %>
    
</p>

<dl class="dl-horizontal">
  
  <% !@utilisateur.contributions.each do |contribution| %>

