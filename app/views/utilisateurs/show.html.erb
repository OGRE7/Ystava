    <dd><%= contribution.description %></dd>
    
  <% end %>
    
    <dt></dt>
    <dd>
      <%= link_to "Ajouter une contribution", new_contribution_path %>
    </dd>
    
    <dt></dt>
    <dd>---</dd>
    
    <dt><%= number_to_currency(@utilisateur.contributions.sum("somme")) %></dt>
    <dd><b>TOTAL</b></dd>
    
</dl>